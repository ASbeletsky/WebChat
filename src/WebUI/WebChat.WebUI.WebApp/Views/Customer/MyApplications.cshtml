@model IEnumerable<WebChat.WebUI.ViewModels.Application.ApplicationShortInfoViewModel>
    <h1>@ViewBag.Title</h1>
    <div class="container">
        <div class="row">

            @foreach (var appInfo in Model)
            {

                <div class="col-md-5 appCard">
                    <div class="row">
                        <div class="col-md-12 appUrl">
                            @appInfo.Name
                        </div>
                        <div class="appShortInfoFields">
                            <div class="col-md-7 fieldTitle">Агентов</div>
                            <div class="col-md-5">@appInfo.AgentsCount</div>

                            <div class="col-md-7 fieldTitle">Агентов онлайн</div>
                            <div class="col-md-5">@appInfo.AgentsOnlineCount</div>

                            <div class="col-md-7 fieldTitle">Диалогов</div>
                            <div class="col-md-5">@appInfo.DialogsCount</div>


                            <div class="col-md-7 fieldTitle">Самый активный агент:</div>
                            <div class="col-md-5">@appInfo.BestAgent.Name (@appInfo.BestAgent.DialogsCount клиентов)</div>
                            <div class="clearfix"></div>
                        </div>

                        <div>
                            <a href="" class="btn btn-default"><i class="fa fa-code"></i>Скрипт</a>
                            <a href="" style="margin-left: 10px;" class="pull-right btn btn-danger">Удалить</a>
                            <a href="" class="pull-right btn btn-warning">Редактировать</a>
                        </div>
                    </div>
                </div>

            }
        </div>
        <br />
        <a class="btn btn-success" href="/Owner/AddApplication">Добавить приложение</a>
    </div>
