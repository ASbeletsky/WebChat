@model WebChat.WebUI.ViewModels.Customer.RegisterCustomerAndFirstAppViewModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("RegisterCustomerAndFirstApp", "Customer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Укажите информацию о себе.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Customer.Email, new { @class = "form-control", placeholder = "example@mail.com" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Customer.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Customer.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>

    <h5>Зарегистрируйте свое первое приложение.</h5>

    <div class="form-group">
        @Html.LabelFor(m => m.App.Occupation, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.App.Occupation, new { @class = "form-control", placeholder = "итеренет магазин/ сервис по..." })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.App.WebSiteUrl, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.App.WebSiteUrl, new { @class = "form-control", placeholder = "mysite.com" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Продолжить" />
        </div>
    </div>
}

