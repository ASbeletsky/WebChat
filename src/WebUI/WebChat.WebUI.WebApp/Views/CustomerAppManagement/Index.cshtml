@{
    ViewBag.Title = "Настройка чата";
}

@Styles.Render(WebChat.WebUI.WebApp.AppStart.BundleConfig.CustomerStyles)

<div class="row body-content">
    <div class="col-md-offset-8 col-sm-offset-6">
        <div class="form-group">
            <label class="col-xs-4 col-sm-5 col-md-5 dropdown-label">Чат для сайта:</label>
            <div class="col-xs-8 col-sm-7">
                @Html.DropDownList("customerApps", (IEnumerable<SelectListItem>)ViewBag.CustomerApps, new { id = "customerApps", name = "customerApps", @class = "form-control input-sm" })
            </div>
        </div>
    </div>
</div>


<div id="usersAndChatsInfo" class="row">

</div>

<div id="usersOnMap" class="row">

</div>



@section scripts
{
    @Scripts.Render(WebChat.WebUI.WebApp.AppStart.BundleConfig.CustomerAppScripts)
}


