<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href="@System.Configuration.ConfigurationManager.AppSettings["BaseUrlPath"].ToString()" />
    <title>@ViewBag.Title - WebChat Application</title>
   
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    @Styles.Render("~/Content/css")
</head>
<body>
    @RenderSection("styles", required: false)

    @Html.Partial("_Header")
    <div id="wrap" class="container body-content">
        <div id="main">
            @RenderBody()
            <br />
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @Html.Partial("_Footer")   
    <div id="modal-container">
        @RenderSection("modal", required: false)
    </div>    
    </body>
</html>



